<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="Snake" Height="350" Width="525" ResizeMode="NoResize" Closed="Window_Closed">
    <Grid>
        <Label Name="BannerText" Width="220" Height="90" Margin="120,0,100,150" FontSize="90" FontFamily="pristina">Snake</Label>
        <Button Name="NewGame" Width="100" Height="30" Margin="100,80,100,40" Background="Black" Foreground="white" Click="NewGame_Click_1" >New Game</Button>
        <Button Name="Quit" Width="100" Height="30" Margin="50,150,50,1" Background="Black" Foreground="white">Quit</Button>
    </Grid>
</Window>
